<p id="notice"><%= notice %></p>

<h1>Learning Lists</h1>

<% @lists.each do |list| %>
  <table>
    <tr>
      <th>List: <%= list.name%></th>
      <% list.attempts.each_with_index do |attemtp, index| %>
        <th>Attemtp: <%= index + 1 %></th>
      <% end %>
    </tr>
    <% list.list_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <% show_answers(list, item).each do |attempt| %>
          <td> 
            <input id="checkBox" type="checkbox"  onclick="return false;" <%= 'checked' if attempt.marked %> /> 
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>

<%= link_to 'Go Back', root_path, class: 'list-btn' %>